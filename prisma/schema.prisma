// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator jsonSchema {
  provider = "prisma-json-schema-generator"
  output   = "../src/model"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // for dev
  // url      = "file:./main.db"
}

model Device{
  adbId    String @id
  name     String
  model    String
  product  String
  config   DeviceConfig[]
}

model DeviceConfig{
  id       String     @id @default(uuid())
  name     String
  device   Device  @relation(fields: [deviceId], references: [adbId])
  deviceId String
  deviceConfigValue DeviceConfigValue[] 
}

model DeviceConfigValue{
  id       String     @id @default(uuid())
  value    String
  deviceConfig   DeviceConfig  @relation(fields: [deviceConfigId], references: [id])
  deviceConfigId String
}

// This only for unit test
model Test {
  id       Int     @id @default(autoincrement())
  name     String
}